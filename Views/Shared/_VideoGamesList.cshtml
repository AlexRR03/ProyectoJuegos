@model List<VideoGame>

    <div class="row">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4><em>VideoGames</em> Library</h4>
            </div>
            <div class="row">
                @foreach (VideoGame game in Model)
                {
                    <div  class="col-lg-3 col-sm-6">
                        <a asp-action="Details" asp-controller="Dashboard" asp-route-id="@game.Id">
                            <div class="item">
                                <img src="~/images/@game.ImageName" alt="@game.Name">
                                <h4>@game.Name<br><span>@game.Genre</span></h4>
                            </div>
                        </a>
                    </div>
                }
               
            </div>
        </div>
    </div>

